<div ng-controller="RegistrationController">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <md-input-container>
          <%= f.label :email %>
          <%= f.email_field :email, autocomplete: "off" %>
      </md-input-container> <br>

      <md-input-container>
          <%= f.label :username %>
          <%= f.text_field :username, autocomplete: "off" %>
      </md-input-container> <br>

      <% if @method == :create %>
          <md-input-container>
              <%= f.label :password %>
              <%= f.password_field :password, autocomplete: "off" %>
          </md-input-container> <br>

          <md-input-container>
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
          </md-input-container> <br>

      <% else %>
          <md-input-container>
              <%= f.label :current_password %>
              <%= f.password_field :current_password, autocomplete: "off" %>
          </md-input-container>
      <% end %> <br>

      <md-input-container>
          <%= f.label :city %>
          <%= f.text_field :city, autocomplete: "off" %>
      </md-input-container> <br>

      <md-input-container>
          <%= f.label :state %>
          <%= f.text_field :state, autocomplete: "off" %>
      </md-input-container> <br>

      <md-input-container>
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code, autocomplete: "off" %>
      </md-input-container> <br>

      <md-input-container>
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number, autocomplete: "off" %>
      </md-input-container> <br>

      <input type="hidden" id="skill_ids" name="skill_ids">
      <input type="hidden" id="issue_ids" name="issue_ids">

      <%= render 'shared/select_skills' %> <br>
      <%= render 'shared/select_issues' %> <br>

      <md-button type="submit" class="md-raised md-primary">
        <%= @submit_button_text %>
      </md-button> <br>

  <% end %>
</div>