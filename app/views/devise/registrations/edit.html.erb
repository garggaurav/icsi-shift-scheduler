<h2>Edit</h2>

<div ng-controller="RegistrationController">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>

      <md-input-container>
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "off" %>
      </md-input-container>
      <br>

      <md-input-container>
        <%= f.label :username %>
        <%= f.text_field :username, autocomplete: "off" %>
      </md-input-container>
      <br>

      <md-input-container>
        <%= f.label :current_password %>
        <%= f.password_field :current_password, autocomplete: "off" %>
      </md-input-container>
      <br>

      <md-input-container>
        <%= f.label :city %>
        <%= f.text_field :city, autocomplete: "off" %>
      </md-input-container>
      <br>

      <md-input-container>
        <%= f.label :state %>
        <%= f.text_field :state, autocomplete: "off" %>
      </md-input-container>
      <br>

      <md-input-container>
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code, autocomplete: "off" %>
      </md-input-container>
      <br>

      <md-input-container>
        <%= f.label :phone_number %>
        <%= f.text_field :phone_number, autocomplete: "off" %>
      </md-input-container>
      <br>

      <input type="hidden" id="skill_ids" name="skill_ids">
      <input type="hidden" id="issue_ids" name="issue_ids">

      <md-contact-chips
        ng-model="skills"
        md-contacts="findSkills($query)"
        md-contact-name="description"
        md-require-match="true"
        md-highlight-flags="i"
        placeholder="Skills">
      </md-contact-chips> <br> <br>

      <md-contact-chips
        id="issues"
        ng-model="issues"
        md-contacts="findIssues($query)"
        md-contact-name="description"
        md-require-match="true"
        md-highlight-flags="i"
        placeholder="Issues">
      </md-contact-chips> <br> <br>

      <md-button type="submit" class="md-raised md-primary">Save Changes</md-button> <br>
  <% end %>
</div>